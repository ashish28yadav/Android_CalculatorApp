<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""
        android:layout_margin="20dp"
        android:textSize="25dp" />



    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25dp"
        android:text=""
        android:layout_margin="20dp"
        />
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btnAC"
           style="@style/buttonNumber"
            android:text="AC">

        </Button>

        <Button
            android:id="@+id/btnDivide"
            style="@style/buttonOperation"
            android:text="/">

        </Button>

    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btn7"
            style="@style/buttonNumber"
            android:text="7">

        </Button>
        <Button
            android:id="@+id/btn8"
            style="@style/buttonNumber"
            android:text="8">

        </Button>
        <Button
            android:id="@+id/btn9"
            style="@style/buttonNumber"
            android:text="9">

        </Button>
        <Button
            android:id="@+id/btnMultiply"
            style="@style/buttonOperation"
            android:text="X">

        </Button>

    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btn4"
            style="@style/buttonNumber"
            android:text="4">

        </Button>
        <Button
            android:id="@+id/btn5"
            style="@style/buttonNumber"
            android:text="5">

        </Button>
        <Button
            android:id="@+id/btn6"
            style="@style/buttonNumber"
            android:text="6">

        </Button>
        <Button
            android:id="@+id/btnMinus"
            style="@style/buttonOperation"
            android:textSize="30dp"
            android:text="-">

        </Button>

    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btn1"
            style="@style/buttonNumber"
            android:text="1">

        </Button>
        <Button
            android:id="@+id/btn2"
            style="@style/buttonNumber"
            android:text="2">

        </Button>
        <Button
            android:id="@+id/btn3"
            style="@style/buttonNumber"
            android:text="3">

        </Button>
        <Button
            android:id="@+id/btnPlus"
            style="@style/buttonOperation"
            android:text="+">

        </Button>

    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btnDot"
            style="@style/buttonNumber"
            android:text=".">

        </Button>
        <Button
            android:id="@+id/btn0"
            style="@style/buttonNumber"
            android:text="0">

        </Button>

        <Button
            android:id="@+id/btnEquals"
            style="@style/buttonNumber"
            android:layout_weight="2"
            android:background="@color/orange"
            android:text="=">

        </Button>

    </LinearLayout>


</LinearLayout>